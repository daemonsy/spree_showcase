<%= render :partial => 'spree/admin/shared/configuration_menu' %>
<%= render :partial=>'spree/admin/shared/showcase_submenu'%>

<% content_for :page_title do %>
  <%= Spree.t(:showcase_settings) %>
<% end %>

<% content_for :page_actions do %>
  <div class="toolbar" data-hook="toolbar">
    <ul class="actions header-action-links inline-menu">
      <li id="edit_showcase_settings">
        <%= button_link_to Spree.t(:edit_settings), edit_admin_showcase_settings_path, :id => 'admin_showcase_settings_link' %>
      </li>
    </ul>
  </div>
<% end %>

<table data-hook="preferences">
  <% @preferences.each do |key| %>
  <tr>
    <td scope="row"><%= t(key) %>:</th>
    <td><%= SpreeShowcase::Config[key] %></td>
  </tr>
  <% end %>
</table>

<%= render :partial =>"spree/admin/shared/showcase_settings" %>